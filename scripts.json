{
  "$schema": "https://deno.land/x/denon@2.4.7/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run app.ts",
      "desc": "run my app.ts file",
      "allow" : [
        "net",
        "env",
        "read",
        "write"
      ],
      "env": {
        "key": "secret"
      },
      "tsconfig": "tsconfig.json",
      "unstable": true
    }
  },
  "watcher": {
    "match": [
      "app.ts",
      "src/**/*.ts"
    ]
  }
}